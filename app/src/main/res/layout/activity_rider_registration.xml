<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#433F3F"
    tools:context=".Registration.RiderRegistration">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="340dp"
        android:layout_height="76dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Rider Registration"
        android:textColor="#271F1F"
        android:textSize="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/alreadyAccount"
        android:layout_width="201dp"
        android:layout_height="38dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="#271F1F"
        android:onClick="alreadyMemberToLogin"
        android:text="Already account?"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registration"
        app:strokeColor="#2E2828" />

    <EditText
        android:id="@+id/ridernameforregistration"
        android:layout_width="248dp"
        android:layout_height="42dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Enter username"
        android:inputType="textPersonName"
        android:textColorHint="#271F1F"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registrationwarning" />

    <EditText
        android:id="@+id/riderpasswordforregisttration"
        android:layout_width="250dp"
        android:layout_height="46dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Enter password"
        android:inputType="textPassword"
        android:textColorHint="#271F1F"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ridernameforregistration" />

    <EditText
        android:id="@+id/riderconfirmpassword"
        android:layout_width="250dp"
        android:layout_height="46dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Confirm password"
        android:inputType="textPassword"
        android:textColorHint="#271F1F"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/riderpasswordforregisttration" />

    <Button
        android:id="@+id/registration"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="188dp"
        android:backgroundTint="#271F1F"
        android:onClick="riderregistration"
        android:text="Registration"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/riderpasswordforregisttration"
        app:strokeColor="#2E2828" />

    <TextView
        android:id="@+id/registrationwarning"
        android:layout_width="331dp"
        android:layout_height="31dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:textColor="#FBFBFB"
        android:textSize="13dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <EditText
        android:id="@+id/email"
        android:layout_width="253dp"
        android:layout_height="44dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Enter email"
        android:inputType="textEmailAddress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/riderconfirmpassword" />

    <EditText
        android:id="@+id/age"
        android:layout_width="255dp"
        android:layout_height="42dp"
        android:layout_marginStart="75dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Enter age"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email" />

</androidx.constraintlayout.widget.ConstraintLayout>