<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#433F3F"
    tools:context=".MainActivity">

    <Switch
        android:id="@+id/aSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="180dp"
        android:layout_marginTop="220dp"
        android:backgroundTint="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/driver"
        android:layout_width="81dp"
        android:layout_height="36dp"
        android:layout_marginStart="61dp"
        android:layout_marginTop="79dp"
        android:gravity="center"
        android:text="Driver"
        android:textColor="#271F1F"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/rider"
        android:layout_width="86dp"
        android:layout_height="37dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="79dp"
        android:gravity="center"
        android:text="Rider"
        android:textColor="#271F1F"
        android:textSize="25dp"
        app:layout_constraintStart_toEndOf="@+id/aSwitch"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="339dp"
        android:layout_height="91dp"
        android:layout_marginStart="39dp"
        android:layout_marginTop="42dp"
        android:gravity="center"
        android:text="Welcome to Uber"
        android:textColor="#271F1F"
        android:textSize="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/registration"
        android:layout_width="222dp"
        android:layout_height="41dp"
        android:layout_marginStart="98dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="#271F1F"
        android:onClick="goToLoginOrRegistration"
        android:text="TO Login/Registratiin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rider"
        app:strokeColor="#2E2828" />

</androidx.constraintlayout.widget.ConstraintLayout>