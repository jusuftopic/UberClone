<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFDFD"
    tools:context=".MainApp.Rider.Settings.OptionPayment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/usernameSettings"
            android:layout_width="match_parent"
            android:layout_height="89dp"
            android:background="#6E6666"
            android:backgroundTint="#605D5D"
            android:gravity="clip_horizontal|center|fill_horizontal|center_vertical"
            android:padding="20px"
            android:paddingLeft="5px"
            android:text="Payment"
            android:textColor="#FFFCFC"
            android:textSize="16sp" />

        <ListView
            android:id="@+id/cardSettingsList"
            android:layout_width="match_parent"
            android:layout_height="358dp"
            android:layout_marginTop="0px" />

        <Button
            android:id="@+id/newCardOptionPayment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#424040"
            android:onClick="addNewCard"
            android:text="add new Card" />

    </LinearLayout>

</RelativeLayout>
